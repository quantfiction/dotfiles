# Oh My Zsh configuration
export ZSH="$HOME/.oh-my-zsh"
plugins=(git node npm z zsh-autosuggestions zsh-syntax-highlighting)
source $ZSH/oh-my-zsh.sh

# Environment files
. "$HOME/.local/bin/env"
. "$HOME/.atuin/bin/env"

# PATH additions
if [[ ":$PATH:" != *":/home/ubuntu/.local/bin:"* ]]; then
  export PATH="/home/ubuntu/.local/bin:$PATH"
fi

# Tool initializations
eval "$(zoxide init zsh)"
eval "$(atuin init zsh)"
eval "$(starship init zsh)"

# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

# Aliases
alias am='cd "/home/ubuntu/mcp_agent_mail" && scripts/run_server_with_token.sh'
alias cc='claude'
alias cod='codex'
alias gmi='gemini --yolo'
alias ls='lsd'
alias start-mindhive='/home/ubuntu/repositories/mindhive/scripts/dev-expose.sh'
alias swarm-monitor='cd /home/ubuntu/repositories/mindhive/services/swarm-orchestrator && pnpm tsx src/bin/monitor.ts'

# bun completions
[ -s "/home/ubuntu/.bun/_bun" ] && source "/home/ubuntu/.bun/_bun"

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"
export NTM_PROJECTS_BASE="~/repositories"

# opencode
export PATH=/home/ubuntu/.opencode/bin:$PATH
# API keys loaded from ~/.secrets (not committed to git)
[ -f ~/.secrets ] && source ~/.secrets
