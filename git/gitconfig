# NO DEFAULT USER - Set per-repo to avoid committing with wrong account
# Use: git personal  OR  git work  in each repo

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[init]
	defaultBranch = main

[core]
	editor = nano

[pull]
	rebase = false

[push]
	default = current

[alias]
	# Set work identity in current repo
	work = "!git config user.name 'Your Work Name' && git config user.email 'your-work@email.com' && echo 'Switched to work identity'"

	# Set personal identity in current repo
	personal = "!git config user.name 'Your Personal Name' && git config user.email 'your-personal@email.com' && echo 'Switched to personal identity'"

	# Check which identity is active (will error if not set)
	whoami = "!git config user.name && git config user.email"

	# Common shortcuts
	st = status
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --
